---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { useTranslations } from '../../i18n';

const lang = 'en';
const t = useTranslations(lang);
---

<Layout title={`${t.imprint.title} - Alles Gut`} description={t.meta.description} lang={lang}>
  <Header t={t} lang={lang} />
  <main class="legal-content">
    <div class="content-container">
      <h1>{t.imprint.title}</h1>

      <h2>{t.imprint.project}</h2>
      <p>{t.imprint.projectContent}</p>

      <h2>{t.imprint.contact}</h2>
      <p>
        {t.imprint.email}: <a href="mailto:contact@alles-gut.app">contact@alles-gut.app</a>
      </p>

      <h2>{t.imprint.repository}</h2>
      <p>{t.imprint.repositoryContent}</p>
      <p>
        <a href="https://github.com/nicegood123/alles-gut" target="_blank" rel="noopener noreferrer">github.com/nicegood123/alles-gut</a>
      </p>

      <h2>{t.imprint.license}</h2>
      <p>{t.imprint.licenseContent}</p>
    </div>
  </main>
  <Footer t={t} lang={lang} />
</Layout>
