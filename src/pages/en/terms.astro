---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { useTranslations } from '../../i18n';

const lang = 'en';
const t = useTranslations(lang);
---

<Layout title={`${t.terms.title} - Alles Gut`} description={t.meta.description} lang={lang}>
  <Header t={t} lang={lang} />
  <main class="legal-content">
    <div class="content-container">
      <h1>{t.terms.title}</h1>

      <p>{t.terms.intro}</p>

      <h2>{t.terms.license}</h2>
      <p>{t.terms.licenseContent}</p>
      <p>
        <a href="https://github.com/nicegood123/alles-gut/blob/main/LICENSE" target="_blank" rel="noopener noreferrer">View License</a>
      </p>

      <h2>{t.terms.usage}</h2>
      <p>{t.terms.usageContent}</p>

      <h2>{t.terms.contact}</h2>
      <p>{t.terms.contactContent}</p>
      <p>
        <a href="https://github.com/nicegood123/alles-gut" target="_blank" rel="noopener noreferrer">github.com/nicegood123/alles-gut</a><br />
        Email: <a href="mailto:contact@alles-gut.app">contact@alles-gut.app</a>
      </p>
    </div>
  </main>
  <Footer t={t} lang={lang} />
</Layout>
