---
import { languages, type Lang, defaultLang, getLocalizedPath } from '../i18n';

interface Props {
  t: any;
  lang: Lang;
}

const { t, lang } = Astro.props;
---

<header>
  <div class="container">
    <nav class="nav">
      <a href={getLocalizedPath('/', lang)} class="logo">
        <div class="logo-icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" fill="currentColor"/>
          </svg>
        </div>
        Alles Gut
      </a>
      <div class="nav-links">
        <a href={getLocalizedPath('/', lang) + '#features'}>{t.nav.features}</a>
        <a href={getLocalizedPath('/', lang) + '#team'}>{t.nav.about}</a>
        <a href={getLocalizedPath('/', lang) + '#download'} class="btn btn-primary">{t.nav.download}</a>
        <select class="lang-select" onchange="window.location.href = this.value">
          {Object.entries(languages).map(([code, name]) => (
            <option value={code === defaultLang ? '/' : `/${code}/`} selected={code === lang}>
              {name}
            </option>
          ))}
        </select>
      </div>
    </nav>
  </div>
</header>
