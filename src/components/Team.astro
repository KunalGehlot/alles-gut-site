---
interface Props {
  t: any;
}

const { t } = Astro.props;

const team = [
  { name: 'Hans-Martin', image: '/team/hans-martin.svg' },
  { name: 'Arjit Chauhan', image: '/team/arjit-chauhan.svg' },
  { name: 'Kunal Gehlot', image: '/team/kunal-gehlot.svg' },
];
---

<section class="section team-section" id="team">
  <div class="container">
    <h2 class="section-title">{t.team.title}</h2>
    <p style="text-align: center; margin-top: -24px; margin-bottom: 24px;">{t.team.description}</p>
    <div class="team-grid">
      {team.map((member) => (
        <div class="team-member">
          <img
            src={member.image}
            alt={member.name}
            class="team-avatar-img"
            width="120"
            height="120"
          />
          <h4>{member.name}</h4>
          <p>{t.team.cofounder}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .team-avatar-img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    margin-bottom: 16px;
    object-fit: cover;
  }
</style>
