---
import { type Lang } from '../i18n';

interface Props {
  t: any;
  lang: Lang;
}

const { t, lang } = Astro.props;

// Legal pages: German canonical, English available
// All other languages link to German (legally binding)
const privacyPath = lang === 'en' ? '/en/privacy/' : '/datenschutz/';
const termsPath = lang === 'en' ? '/en/terms/' : '/agb/';
const imprintPath = lang === 'en' ? '/en/imprint/' : '/impressum/';
---

<footer>
  <div class="container">
    <div class="footer-content">
      <div class="footer-links">
        <a href={privacyPath}>{t.footer.privacy}</a>
        <a href={termsPath}>{t.footer.terms}</a>
        <a href={imprintPath}>{t.footer.imprint}</a>
      </div>
      <div class="footer-bottom">
        <span class="made-in-germany">
          <span class="germany-flag">
            <span class="black"></span>
            <span class="red"></span>
            <span class="gold"></span>
          </span>
          {t.footer.madeInGermany}
        </span>
        <span class="footer-copyright">{t.footer.copyright}</span>
      </div>
    </div>
  </div>
</footer>
